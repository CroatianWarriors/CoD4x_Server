###############################################################################
# Common project properties.
CFLAGS=-c -g -O0
DEFINES=
LFLAGS=-shared
ADDITIONAL_OBJ=
###############################################################################
# Arguments shortcut.
ARGS= MODULE="$(OUTPUT)" CFLAGS="$(CFLAGS)" DEFINES="$(DEFINES)" LFLAGS="$(LFLAGS)" ADDITIONAL_OBJ="$(ADDITIONAL_OBJ)"
###############################################################################
# Rules.
all:
	@$(MAKE) -s -f../makefile_common $(ARGS)

clean:
	@$(MAKE) -s -f../makefile_common clean $(ARGS)

clean_all:
	@$(MAKE) -s -f../makefile_common clean_all $(ARGS)